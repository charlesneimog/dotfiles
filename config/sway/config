    status_command waybar --config /home/neimog/Documents/Git/dotfiles/config/waybar/config.jsonc
    mode invisible
}

# ╭───────────────────────────────────────╮
# │                inputs                 │
# ╰───────────────────────────────────────╯
input type:pointer {
    accel_profile flat
    pointer_accel 0
}

input type:keyboard {
    xkb_layout br,
    xkb_options grp:rctrl_toggle
}

input "type:touchpad" {
    tap enabled
    middle_emulation enabled
    natural_scroll enabled
}

bindgesture swipe:right workspace prev
bindgesture swipe:left workspace next
bindgesture swipe:up exec killall rofi || rofi -show drun -show-icons -icon-theme "tela-circle" -theme /home/neimog/.config/rofi/files/launchers/type-7/style-2.rasi


# ╭───────────────────────────────────────╮
# │                execute                │
# ╰───────────────────────────────────────╯
exec {
    gsettings set org.gnome.desktop.interface gtk-theme 'adw-gtk3' && gsettings set org.gnome.desktop.interface color-scheme 'default'
    bash -c "/home/neimog/.config/sway/scripts/get_bing_image.sh" && swaybg -i "$HOME/.config/sway/wallpapers/wallpaper.jpg"
    swaync 

    # env
    exec --no-startup-id dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
    exec --no-startup-id systemctl --user import-environment WAYLAND_DISPLAY XDG_CURRENT_DESKTOP

    # internal
    exec dbus-update-activation-environment --systemd wayland_display xdg_current_desktop=sway
    /usr/libexec/gsd-xsettings
    dbus-update-activation-environment --systemd wayland_display xdg_current_desktop &

    # ssh and others
    /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
    /usr/lib/xdg-desktop-portal-gtk
    /usr/lib/xdg-desktop-portal-wlr
    systemctl --user restart xdg-desktop-portal-wlr


    # cloud
    nextcloud
    autotiling-rs
    anytype
    blueman-applet
}

# ╭───────────────────────────────────────╮
# │            execute always             │
# ╰───────────────────────────────────────╯

exec_always {
    # copy and paste
    wl-paste --type text --watch cliphist store
    wl-paste --type image --watch cliphist store
    # gnome 
    exec sh -c 'eval $(gnome-keyring-daemon --start --components=pkcs11,secrets,ssh,gpg); echo $SSH_AUTH_SOCK > /run/user/1000/ssh_auth_sock'



    # idle, locks
    swayidle -w \
        timeout 120 'hyprlock' \
        timeout 300 'swaymsg "output * dpms off"' \
        resume 'swaymsg "output * dpms on"' \
        before-sleep 'hyprlock'

}

